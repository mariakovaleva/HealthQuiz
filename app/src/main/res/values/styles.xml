<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleFont" parent="AppTheme">
        <item name="android:textColor">#140078</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="QuestionFont" parent="AppTheme">
        <item name="android:textColor">#512da8</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyRadioCheckBox" parent="AppTheme">
        <item name="colorControlNormal">@color/colorAnswer</item>
    </style>

</resources>
